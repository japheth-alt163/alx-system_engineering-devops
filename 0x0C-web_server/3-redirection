#!/bin/bash

# Check for root privileges
if [ "$EUID" -ne 0 ]; then
    echo "Please run as root or with sudo."
    exit 1
fi

# Define the redirection location
redirect_location="https://www.youtube.com/watch?v=QH2-TGUlwu4"

# Create a new Nginx configuration file for redirection
sudo bash -c "echo 'server {
    listen 80 default_server;
    listen [::]:80 default_server;

    server_name _;

    location /redirect_me {
        return 301 $redirect_location;
    }

    root /var/www/html;
    index index.html;

    location / {
        try_files \$uri \$uri/ =404;
    }
}' > /etc/nginx/sites-available/default"

# Restart Nginx
sudo service nginx restart

# Output success message
echo "Nginx configured for redirection successfully."
